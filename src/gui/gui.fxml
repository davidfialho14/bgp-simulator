<?xml version="1.0" encoding="UTF-8"?>

<?import gui.radiobuttons.D1R1ProtocolRadioButton?>
<?import gui.radiobuttons.D2R1ProtocolRadioButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="pane" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.65"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="60.0"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="105.0"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="30.0"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="80.0"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="35.0"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="80.0"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="75.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity"
                           prefWidth="70.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="250.0" minHeight="-Infinity" prefHeight="135.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="5.0" vgrow="ALWAYS"/>
    </rowConstraints>
    <children>
        <Label text="Network:"/>
        <TextField fx:id="networkTextField" editable="false" GridPane.columnIndex="1" GridPane.columnSpan="6"/>
        <Button mnemonicParsing="false" onAction="#handleClickedBrowseButton" text="Browse" GridPane.columnIndex="7"/>
        <Label text="Destination:" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Repetitions:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Spinner fx:id="destinationIdSpinner" editable="true" prefHeight="26.0" prefWidth="129.0"
                 GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="1"/>
        <Spinner fx:id="repetitionsSpinner" editable="true" GridPane.columnIndex="2" GridPane.columnSpan="2"
                 GridPane.rowIndex="2"/>
        <Button fx:id="startButton" defaultButton="true" disable="true" maxWidth="67.0" minWidth="67.0"
                mnemonicParsing="false" onAction="#handleClickedStartButton" prefWidth="67.0" text="Start"
                GridPane.columnIndex="7" GridPane.rowIndex="1"/>
        <TitledPane animated="false" prefHeight="301.0" prefWidth="385.0" text="Partial Deployment"
                    GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="6">
            <content>
                <fx:include fx:id="partialDeploymentForm" source="partialdeployment/partial_deployment.fxml"/>
            </content>
        </TitledPane>
        <CheckBox fx:id="debugCheckBox" mnemonicParsing="false" text="Generate debug file (increases simulation time)"
                  GridPane.columnIndex="1" GridPane.columnSpan="6" GridPane.rowIndex="5"/>
        <Label text="Message Delay" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="min:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Label text="max:" GridPane.columnIndex="4" GridPane.rowIndex="3"/>
        <Spinner fx:id="minDelaySpinner" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
        <Spinner fx:id="maxDelaySpinner" GridPane.columnIndex="5" GridPane.rowIndex="3"/>
        <Label text="Detection:" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <D1R1ProtocolRadioButton selected="true" text="Without Path" GridPane.columnIndex="2" GridPane.columnSpan="2"
                                 GridPane.rowIndex="4">
            <toggleGroup>
                <ToggleGroup fx:id="detectionGroup"/>
            </toggleGroup>
        </D1R1ProtocolRadioButton>
        <D2R1ProtocolRadioButton text="With Path" toggleGroup="$detectionGroup" GridPane.columnIndex="4"
                                 GridPane.columnSpan="2" GridPane.rowIndex="4"/>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</GridPane>
